.vs-avatar
  --vs-color: vs-var('primary')
  --vs-badge: vs-var('primary')
  --vs-history: vs-var('primary')
  --vs-typing: vs-var('primary')
  --vs-text-color: vs-var('color')

  border-radius: $vs-avatar-radius
  background: vs-color('color')
  color rgb(255,255,255)
  transition: $vs-avatar-transition
  position relative
  display: block
  font-size: $vs-avatar-font-size
  box-sizing: border-box
  width: 33px
  height 33px
  min-width 33px
  min-height: 33px
  display: flex
  align-items: center
  justify-content: center
  margin 0px 5px
  transition: $vs-avatar-transition
  user-select none
  z-index 100
  cursor pointer
  box-shadow: 0px 8px 10px 0px vs-color('color',.2)

  // disabled

  &--disabled
    opacity .5
    pointer-events: none
    user-select none

  // social

  &--social
    margin-left: 13px

  // loading

  &--loading
    pointer-events: none !important

  // font-size

  &--4
    font-size: $vs-avatar-font-size - 3px
  &--5
    font-size: $vs-avatar-font-size - 4px

  // icons

  i
    font-size: 1.1rem

  .vs-ripple__effect-content
    transition: $vs-avatar-transition
    border-radius: $vs-avatar-radius

  &--circle
    border-radius: 50%
    .vs-avatar__history,.vs-avatar__loading
      border-radius: 50%
    .vs-avatar__badge
      top 50%
      right -5px
      transform: translate(0,-50%)
    img
      &:not(.vs-avatar__clone-img)
        border-radius: 50% !important
    .vs-ripple__effect-content
      border-radius: 50%
  &--img
    background: none !important
    box-shadow: none !important
  &:hover
    border-radius: 7px !important
    z-index: 200
    .vs-ripple__effect-content, .vs-avatar__history
      border-radius: 7px !important
    img
      border-radius: 7px !important

  &:disabled
    opacity .5 !important
    pointer-events: none
    user-select none

  .vs-avatar__span
    pointer-events: none
    position relative
  img
    &:not(.vs-avatar__clone-img)
      position relative
      top 0px
      left 0px
      border-radius: $vs-avatar-radius
      width: 100%
      height 100%
      z-index 200
      transition: $vs-avatar-transition

.vs-avatar__clone-img
  position absolute
  top 22%
  left 0px
  filter: blur(10px)
  z-index 100
  opacity .6
  transform: scale(0.75)
  border-radius: $vs-avatar-radius
  transition: $vs-avatar-transition
  width: 100%

.vs-avatar__history
  position absolute
  width: calc(100% + 8px)
  height: calc(100% + 8px)
  border: 2px solid vs-color('history', .4)
  border-radius: $vs-avatar-radius
  transition: $vs-avatar-transition
  pointer-events: none
  z-index 100;

.vs-avatar__typing
  position absolute
  bottom -2px
  left 50%
  display: flex
  align-items: center
  justify-content: center
  transform: translate(-50%)
  z-index 600
  background: rgba(255,255,255,1)
  padding: 1px 3px
  border-radius: 8px
  .vs-avatar__typing-circle
    width: 4px
    height 4px
    background: vs-color('typing')
    position relative
    display: block
    margin: 1px
    border-radius: 50%
    animation: typing 1.2s ease infinite
    &--2
      animation: typing 1.2s ease infinite .4s
    &--3
      animation: typing 1.2s ease infinite .8s


@keyframes typing
  50%
    opacity .4
    transform: scale(.3)

.vs-avatar__loading
  width: 100%
  height 100%
  position absolute
  z-index 500
  background: rgba(0,0,0,.25)
  border-radius: $vs-avatar-radius
  pointer-events: none
  display: flex
  align-items: center
  justify-content: center
  .vs-avatar__loading-effect
    position absolute
    width: 22px
    height 22px
    border-radius: 50%
    border: 2px solid rgba(0,0,0,.8)
    box-sizing: border-box
    z-index: 100
    &--1
      border: 2px solid rgba(255,255,255,.4)
      border-left: 2px solid rgba(255,255,255,0)
      border-top: 2px solid rgba(255,255,255,0)
      border-bottom: 2px solid rgba(255,255,255,0)
      z-index 200
      animation: avatarLoading .8s linear infinite
    &--2
      border: 2px solid rgba(255,255,255,1)
      border-left: 2px solid rgba(255,255,255,0)
      border-top: 2px solid rgba(255,255,255,0)
      border-bottom: 2px solid rgba(255,255,255,0)
      z-index 200
      animation: avatarLoading .8s ease-out infinite

@keyframes avatarLoading
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

.vs-avatar__badge
  position absolute
  top 2px
  right -3px
  min-width 9px
  min-height: 9px
  background: vs-color('badge')
  z-index 1100
  border-radius: 10px
  border 1px solid rgb(255,255,255)
  display: flex
  align-items: center
  justify-content: center
  font-size: 8px
  font-weight: bold
  transition: $vs-avatar-transition
  &--content
    padding: 0px 2px
    padding-bottom: 1px
    width: auto
    height 16px
    top: -2px
    right -8px
    letter-spacing: 0px
    border 2px solid rgb(255,255,255)
    i
      font-size: 10px

.vs-avatar__svg-user
  fill: rgb(255,255,255)
  max-width 18px
  z-index 400

.vs-avatar__social
  position absolute
  left: 0px
  z-index 500
  top 50%
  transform: translate(-70%,-50%)
  display: flex
  flex-direction: column
  background: rgb(255,255,255)
  border-radius: 5px
  padding: 2px 1px
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,.2)
  i
    color vs-color('color')
    font-size: 12px
    transition: $vs-avatar-transition
    font-weight: bold
    &:hover
      opacity .8


.vs-avatar__verified
  position absolute
  bottom -3px
  right -4px
  min-width 8px
  min-height: 8px
  background: vs-color('color')
  z-index 400
  border-radius: 10px
  display: flex
  align-items: center
  justify-content: center
  font-size: 8px
  font-weight: bold
  transition: $vs-avatar-transition
  box-shadow: 0px 0px 7px 0px rgba(0,0,0,.3)
  svg
    fill: rgb(255,255,255)
    max-width 13px
    max-height: 13px
    margin: 1px
  i
    margin: 3px
    font-size: 9px
// vs-avatar-group

.vs-avatar-group
  --vs-max-items-row: ''
  display: flex
  align-items: center
  justify-content: center
  position relative
  &--float
    flex-wrap: wrap
    max-width vs-var('max-items-row')
    > .vs-avatar
      margin-left: 0px !important
      font-size: .7rem
      margin-top: 5px

  &:not(&--float) > .vs-avatar
    margin-left: -16px !important
    border: 2px solid rgb(255,255,255)
    font-size: .7rem
    .vs-avatar__badge
      opacity 0
      transform: scale(.5)
    &:hover
      .vs-avatar__badge
        opacity 1
        transform: scale(1)
    svg
      max-width 13px
      margin-right: -2px

