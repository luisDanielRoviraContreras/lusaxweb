/*-----------------
    Global Vars      |||
------------------*/

$vs-transition := all .3s ease
$vs-radius := 10px
$vs-padding-x := 12px
$vs-padding-y := 7px
$vs-font-size := 13px
$vs-border-color := rgba(0,0,0,.1)
$vs-text-color := rgb(91, 87, 119)

/*-----------------
    Components Vars ||||
------------------*/

/*
* BUTTON
*/

$vs-button-transition := $vs-transition
$vs-button-radius := 12px
$vs-button-padding-x := $vs-padding-x + 2
$vs-button-padding-y := $vs-padding-y
$vs-button-font-size := $vs-font-size

/*
* AVATAR
*/

$vs-avatar-transition := $vs-transition
// $vs-avatar-radius := 13px
$vs-avatar-radius := 35%
$vs-avatar-padding-x := $vs-padding-x
$vs-avatar-padding-y := $vs-padding-y
$vs-avatar-font-size := $vs-font-size

/*
* AVATAR
*/

$vs-alert-transition := $vs-transition
// $vs-alert-radius := 13px
$vs-alert-radius := 15px
$vs-alert-padding-x := $vs-padding-x
$vs-alert-padding-y := $vs-padding-y
$vs-alert-font-size := $vs-font-size
